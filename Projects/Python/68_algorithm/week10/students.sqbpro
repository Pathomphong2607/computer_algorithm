-- 1) สร้างตาราง students
-- =========================
CREATE TABLE IF NOT EXISTS students (
    student_id TEXT PRIMARY KEY,   -- รหัสนักศึกษา
    first_name TEXT NOT NULL,      -- ชื่อ
    last_name TEXT NOT NULL,       -- นามสกุล
    major TEXT NOT NULL,           -- สาขาวิชา
    faculty TEXT NOT NULL          -- คณะ
);

-- =========================
-- 2) (ทางเลือก) เพิ่มดัชนีเพื่อค้นหาเร็วขึ้น
-- =========================
CREATE INDEX IF NOT EXISTS idx_students_name
ON students(first_name, last_name);

CREATE INDEX IF NOT EXISTS idx_students_major
ON students(major);

CREATE INDEX IF NOT EXISTS idx_students_faculty
ON students(faculty);

